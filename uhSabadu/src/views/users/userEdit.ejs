<%- include('../partials/head.ejs') %>
    <title>uhSabadu</title>
    <link rel="stylesheet" href="/css/productEdit.css">
    </head>

    <body>
        <%- include('../partials/header.ejs') %>
            <main>
                <form action="/users/edit/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="row product-detail">
                        <div class="col-12 col-md-6">
                            <label for="name" class="form-label">Nombre del usuario:</label>
                            <input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok"
                                class="form-input" value="<%= user.name %>">
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="price" class="form-label">Precio del usuario:</label>
                            <input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input"
                                value="<%= user.price %>">
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="discount" class="form-label">Descuento:</label>
                            <input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input"
                                value="<%= user.discount %>">
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="category" class="form-label">Categoría:</label>
                            <select name="category" id="category" class="form-input">
                                <option value="in-sale" <%=user.category=='in-sale' ? 'selected' : null %>>
                                    En oferta
                                </option>
                                <option value="visited" <%=user.category=='visited' ? 'selected' : null %>>
                                    Últimos agregados
                                </option>
                            </select>
                        </div>

                        <div class="col-12">
                            <label for="image" class="form-label">Imagen:</label>
                            <input type="file" name="image" id="image" class="form-input">
                        </div>

                        <div class="col-12">
                            <label for="description" class="form-label">Descipción:</label>
                            <textarea name="description" id="description"
                                class="form-input"><%= user.description %></textarea>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="buy-now-button">Guardar usuario</button>
                        </div>
                    </div>
                </form>
                <form action="/users/delete/<%= user.id %>?_method=DELETE" method="POST"
                    style="display: inline-flex">
                    <button type="submit" class="action-button delete">ELIMINAR</button>
                </form>
            </main>
            <%- include('../partials/footer.ejs') %>

    </body>

    </html>