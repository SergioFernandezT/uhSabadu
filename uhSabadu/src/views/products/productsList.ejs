<%- include('../partials/head.ejs') %>
	<title>uhSabadu</title>
	<link rel="stylesheet" href="/css/productsList.css">
	</head>

	<body>
		<%- include('../partials/header.ejs') %>
			<main>
				<!-- todos los productos -->
				<div class="cuerpo">
					<% if (products.length> 0 ) { %>

						<% products.forEach(product=> { %>

							<section class="tarjetaProducto">
								<a href="/products/detail/<%= product.id %>">
									<figure class="product-box_image">
										<img src="/images/products/<%= product.image %>"
											alt="imagen de producto <%= product.name %>">
									</figure>
									<article class="product-box_data">
										<h2>
											$<%= toThousand(product.price*(100-product.discount)/100) %>
										</h2>
										<span>
											<%= product.discount %> % OFF
										</span>
										<p>
											<%= product.name %>
										</p>
										<i class="fas fa-truck"></i>
									</article>
								</a>
							</section>

							<% }) %>
					<% } else { %>
						<h2>El producto que buscas no existe</h2>
						<a href='/products'>Voler al catalogo</a>
					<% } %>

				</div>
				<!-- /todos los productos -->
			</main>
			<!-- footer -->
			<%- include('../partials/footer') %>
				<!-- /footer -->


	</body>

	</html>